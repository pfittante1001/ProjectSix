@model IEnumerable<ProjectSix.Models.Top>

@{
    ViewBag.Title = "Index";
}
<script>
function goBack() {
    window.history.back();
}
</script>
<div class="row container" id="titleoutfitpart">
    <div class="col-md-12" id="titleoutfitcolumn">
        <h2>Create, Delete, Edit  Items</h2>
    </div>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <div class="row container" id="detailsrow">
        <div class="col-md-6" id="detailsCol1">
            <img src="@Html.DisplayFor(model => item.Photo)">
        </div>
        <div class="col-md-6" id="detailsCol2">
            <div class="row container" id="detailscol2row1">
                <div class="col-md-3" id="detailsCol2">
                    <h2><span> Item Name: </span>@Html.DisplayFor(model => item.Name)<span>.</span></h2>
                </div>
            </div>
            <div class="row container" id="detailscol2row2">
                <div class="col-md-3" id="detailsCol2">
                    <h2><span> Item Color: </span> @Html.DisplayFor(model => item.Color)</h2>
                </div>
            </div>
            <div class="row container" id="detailscol2row3">
                <div class="col-md-3" id="detailsCol2">
                    <h2><span> Item Season: </span> <span>You can wear this item in </span>@Html.DisplayFor(model => item.Season)<span> seasons.</span></h2>
                </div>
            </div>
            <div class="row container" id="detailscol2row4">
                <div class="col-md-3" id="detailsCol2">
                    <h2><span> Item Occassion: </span> <span>You can wear this item in </span>@Html.DisplayFor(model => item.Occassion)<span> occassions.</span></h2>
                    <a font style="color:#000000" @Html.ActionLink("Edit", "Edit", new { id = item.TopsID })></a>
                    <a font style="color:#000000" @Html.ActionLink("Details", "Details", new { id = item.TopsID })></a>
                    <a font style="color:#000000" @Html.ActionLink("Delete", "Delete", new { id = item.TopsID })></a>
                </div>
            </div>
        </div>
    </div>
}
<div class="row container" id="navigatedetails1">
    <div class="col-md-6" id="navdetbtn1">
        <a class="btn btn-default" id="navdetbtn1" onclick="goBack()">Return To Outfits</a>
    </div>
    <div class="col-md-6" id="navdettbtn">
        <a class="btn btn-default" id="navdetbtn2" @Html.ActionLink("Create New", "Create")></a>
    </div>
</div>