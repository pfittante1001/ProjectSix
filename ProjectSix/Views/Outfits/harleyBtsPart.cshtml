</div>
<head>
    <script>
        function OnClick1() {
            
              window.location.href = "@Url.Action("Details", "Tops", new { id = 16 })";
        };
    </script>
    <script>
        function OnClick2() {

            window.location.href = "@Url.Action("Details", "Tops", new { id = 21 })";
        };
    </script>
    <script>
        function OnClick3() {

            window.location.href = "@Url.Action("Details", "Accessories", new { id = 6 })";
        };
    </script>
    <script>
        function OnClick4() {

            window.location.href = "@Url.Action("Details", "Shoes", new { id = 3 })";
