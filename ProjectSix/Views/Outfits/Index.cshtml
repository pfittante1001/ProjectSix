                if (item.Top.TopTypesID.Equals(5))
                {
                    <img src="@Html.DisplayFor(modelItem => item.Top.Photo)">
                }
                if (item.Top.TopTypesID.Equals(6))
                {
                    <img src="@Html.DisplayFor(modelItem => item.Top.Photo)">
                }
                if (item.Top.TopTypesID.Equals(7))
