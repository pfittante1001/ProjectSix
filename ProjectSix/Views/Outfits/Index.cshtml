                <li data-target="#myCarousel" data-slide-to="7"></li>
                <li data-target="#myCarousel" data-slide-to="8"></li>



            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/rsz_corona.jpg"/>              
                    <div class="carousel-caption">
                        <h3>Corona</h3>
                        <p><a class="btn btn-default" id="returnoutfits" href='@Url.Action("CoronaPart", "Outfits")'>Oufits With Corona Sandels</a></p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/harley.jpg"/>
                    <div class="carousel-caption">
                        <h3>Harley</h3>
                        <p><a class="btn btn-default" id="returnoutfits" href='@Url.Action("HarleyShtsPart", "Outfits")'>Oufits With Harley Shirt</a></p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/rsz_harleyboots.jpg" />
