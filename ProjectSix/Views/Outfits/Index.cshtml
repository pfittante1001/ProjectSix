                if (item.Bottom.BottomTypesID.Equals(4))
                {
                    <img src="@Html.DisplayFor(modelItem => item.Bottom.Photo)">
                }
                if (item.Bottom.BottomTypesID.Equals(5))
                {
                    <img src="@Html.DisplayFor(modelItem => item.Bottom.Photo)">
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shoe.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Top.Name)
            @{
                if (item.Shoe.ShoeTypeID.Equals(1))
                {
                    <img src="@Html.DisplayFor(modelItem => item.Shoe.Photo)">
                }
                if (item.Shoe.ShoeTypeID.Equals(2))
                {
                    <img src="@Html.DisplayFor(modelItem => item.Shoe.Photo)">
                }
            }

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OutfitID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OutfitID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OutfitID })
        </td>
    </tr>
