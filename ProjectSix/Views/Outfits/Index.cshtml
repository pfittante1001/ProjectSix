                    <img src="~/images/rsz_staffordcrewneck.jpg" />
                    <div class="carousel-caption">
                        <h3>Stafford</h3>
                        <p><a class="btn btn-default" id="returnoutfits" href='@Url.Action("StaffordPart", "Outfits")'>Oufits Stafford T-shirts</a></p>
                    </div>
                </div>
               
                <div class="item">
                    <img src="~/images/rsz_truerelligonjeans.jpg" />
                    <div class="carousel-caption">
                        <h3>True Religon</h3>
                        <p><a class="btn btn-default" id="returnoutfits" href='@Url.Action("ReligonPart", "Outfits")'>Oufits Stafford T-shirts</a></p>

